@{ 
    ViewBag.Title = "角色管理";

}
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green-haze">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>角色列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
                <div class="actions">
                    <a href="@Url.Action("Add")" class="btn btn-primary btn-sm">
                        <i class="fa fa-plus"></i> 添加
                    </a>
                </div>
            </div>
            
            <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="tableResult">
                            @*<thead>
                                <tr>
                                    <th>角色名称</th>
                                    <th>角色描述</th>
                                    <th>添加时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>*@
                        </table>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal"  tabindex="-1" role="dialog" aria-labelledby="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="editModalContent">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">编辑角色</h4>
            </div>
            <div class="modal-body">
                <form id="editForm" action="@Url.Action("Edit")" method="post" class="form-horizontal">
                    <input type="hidden" name="Id" id="roleId" />
                    <div class="form-body">
                        <div class="alert alert-danger" style="display:none">
                            <button class="close" data-close="alert"></button>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">角色名称</label>
                            <div class="col-md-4">
                                <input type="text" name="RoleName" id="roleName" class="form-control" placeholder="输入角色名称">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">角色描述</label>
                            <div class="col-md-4">
                                <input type="text" name="RoleDesc" id="roleDesc" class="form-control" placeholder="输入角色描述">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-success" name="btnSave">确定</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="funModal" tabindex="-1" role="dialog" aria-labelledby="funModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="funModalContent">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">角色权限</h4>
            </div>
            <div class="modal-body">
                <form id="funForm" action="#" method="post" class="form-horizontal">
                    <div class="form-body">
                        
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-success" name="btnSave">保存</button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/admin/pages/app/role.js"></script>
@section scripts
{
<script type="text/javascript">
    $(function () {
        roleManager.init('@Url.Action("AjaxGetRoles")','@Url.Action("Edit")','@Url.Action("GetFunctionsByRoleId")','@Url.Action("SaveFunctionsForRole")','@Url.Action("Delete")');
    })
</script>
    }
