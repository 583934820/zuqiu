
@using szzx.web.Entity
@using szzx.web.Models

@model Vip
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green-haze">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>会员列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
                <div class="actions">
                    @*<a href="#" id="btnAdd" class="btn btn-primary btn-sm">
                        <i class="fa fa-plus"></i> 添加
                    </a>*@
                </div>
            </div>

            <div class="portlet-body">
                <form class="form-inline" role="form" id="searchForm" method="post">
                    <div class="form-group">
                        <input type="text" id="vipName" class="form-control" placeholder="姓名" style="width:500px">

                        <button type="button" class="btn btn-success" id="btnSearch">查询</button>

                    </div>
                </form>
                <br />

                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="tableResult"></table>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="editModalContent" style="width:800px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="editForm" action="@Url.Action("AddOrEdit")" method="post">
                    <div class="form-body">
                        <div class="alert alert-danger" style="display:none">
                            <button class="close" data-close="alert"></button>
                            <span></span>
                        </div>
                        <input type="hidden" name="Id" id="id" />
                        <div class="form-group">
                            <label class="col-md-2 control-label">姓名</label>
                            <div class="col-md-9">
                                <input type="text" name="VipName" id="vipName2" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">密码</label>
                            <div class="col-md-9">
                                <input type="password" name="Password" id="pwd" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">手机号</label>
                            <div class="col-md-9">
                                <input type="text" name="MobileNo" id="mobileNo" class="form-control" readonly>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-md-2 control-label">身份证号</label>
                            <div class="col-md-9">
                                <input type="text" name="CardNo" id="cardNo" class="form-control" readonly>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">身份证照</label>

                            <div class="col-md-9">
                                <div><a href="" target="_blank"><img id="cardImgFront" src="" style="margin-bottom:5px;width:300px;height:200px;" /></a></div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">是否有证书</label>
                            <div class="col-md-9">
                                <select name="HasCert" id="hasCert" class="form-control">
                                    <option value="是">是</option>
                                    <option value="否">否</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">证书编号</label>
                            <div class="col-md-9">
                                <input type="text" name="CertNo" id="certNo" class="form-control">
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-success" name="btnSave">确认</button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/admin/pages/app/vip.js"></script>
@section scripts
{
    <script type="text/javascript">
    $(function () {
        vip.init('@Url.Action("AjaxGet")', '@Url.Action("AddOrEdit")');
    })
    </script>
}
