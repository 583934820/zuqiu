
@using szzx.web.Entity
@using szzx.web.Models

@model BannerImg
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green-haze">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>公众号菜单
                </div>
                <div class="tools">
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
                <div class="actions">
                    <a href="#" id="btnAdd" class="btn btn-primary btn-sm">
                        <i class="fa fa-plus"></i> 添加
                    </a>
                </div>
            </div>

            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="tableResult"></table>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="editModalContent" style="width:800px;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="editForm" action="@Url.Action("AddOrEdit")" method="post">
                    <div class="form-body">
                        <div class="alert alert-danger" style="display:none">
                            <button class="close" data-close="alert"></button>
                            <span></span>
                        </div>
                        <input type="hidden" name="Id" id="id" />
                        <div class="form-group">
                            <label class="col-md-2 control-label">菜单名称</label>
                            <div class="col-md-9">
                                <input type="text" name="MenuName" id="menuName" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">菜单级别</label>
                            <div class="col-md-9">
                                <select class="form-control" name="MenuLevel" id="menuLevel">
                                    <option value="1" selected>一级菜单</option>
                                    <option value="2">二级菜单</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">父级菜单</label>
                            <div class="col-md-9">
                                <select class="form-control" name="MenuParentId" id="pMenuId">
                                    <option value="0">--请选择--</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">链接</label>
                            <div class="col-md-9">
                                <input type="text" name="Url" id="url" class="form-control">
                            </div>
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-success" name="btnSave">确认</button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/admin/pages/app/menu.js"></script>
@section scripts
{
    <script type="text/javascript">
    $(function () {
        menu.init('@Url.Action("AjaxGet")', '@Url.Action("AddOrEdit")', '@Url.Action("Delete")', '@Url.Action("AjaxGetParentMenus")');
    })
    </script>
}
