@{
    ViewBag.Title = "用户管理";
}
<link href="~/assets/admin/pages/css/common.css" rel="stylesheet" />
<div class="row">
    <div class="col-md-12">
        <div class="portlet box green-haze">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>用户列表
                </div>
                <div class="tools">
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
                <div class="actions">
                    <a href="@Url.Action("Add")" class="btn btn-primary btn-sm">
                        <i class="fa fa-plus"></i> 添加
                    </a>
                </div>
            </div>

            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="tableResult"></table>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="editModalContent">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">编辑用户</h4>
            </div>
            <div class="modal-body">
                <form id="editForm" action="@Url.Action("Edit")" method="post" class="form-horizontal">
                    <input type="hidden" name="Id" id="userId" />
                    <div class="form-body">
                        <div class="alert alert-danger" style="display:none">
                            <button class="close" data-close="alert"></button>
                            <span></span>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">登录名称</label>
                            <div class="col-md-4">
                                <input type="text" name="LoginName" id="LoginName" class="form-control" placeholder="输入登录名称">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">用户名称</label>
                            <div class="col-md-4">
                                <input type="text" name="UserName" id="UserName" class="form-control" placeholder="输入用户名称">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">登录密码</label>
                            <div class="col-md-4">
                                <input type="password" name="Password" id="Password" class="form-control" placeholder="输入登陆密码">
                            </div>
                        </div>


                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-success" name="btnSave">确定</button>
            </div>
        </div>
    </div>
</div>



<div class="modal fade" id="roleModal" tabindex="-1" role="dialog" aria-labelledby="roleModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content" id="roleModalContent">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">用户角色</h4>
            </div>
            <div class="modal-body">
                <form id="roleForm" action="#" method="post" class="form-horizontal">
                    <input type="hidden" name="Id" id="userId_role" />
                    <div class="form-body" style="margin-left:100px">
                        <div  class="select_role_div">
                            <ul class="left-list" tabindex="-1"></ul>
                        </div>

                        <div class="select_role_img">
                        <img  src="~/assets/admin/pages/img/change.png" />
                        </div>
                        <div class="select_role_div" >
                            <ul class="right-list" tabindex="-1"></ul>
                        </div>
                        <div style="clear:both"></div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-success" name="btnSave">保存</button>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/admin/pages/app/user.js"></script>
@section scripts
{
    <script type="text/javascript">
        $(function () {
            userManager.init('@Url.Action("AjaxGetUsers")', '@Url.Action("Edit")', '@Url.Action("Delete")','@Url.Action("SaveUserRole")','@Url.Action("GetUserRole")');
        })
    </script>
}
